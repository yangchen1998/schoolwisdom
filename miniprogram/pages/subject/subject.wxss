@-webkit-keyframes shine_green {
  from {
    -webkit-box-shadow: 0 0 5px #bbb;
  }

  50% {
    -webkit-box-shadow: 0 0 30px rgb(21, 255, 0);
  }

  to {
    -webkit-box-shadow: 0 0 5px #bbb;
  }
}

.shine_green {
  -webkit-animation-name: shine_green;
  -webkit-animation-duration: 3s;
  -webkit-animation-iteration-count: infinite;
}

