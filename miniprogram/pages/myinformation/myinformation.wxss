/* pages/information/information.wxss */

/* @import '/pages/certifying/certifying.wxss'; */

page {
  background-color: white;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-nickname {
  font-size: small;
  color: rgb(207, 197, 197);
}

.userinfo-information {
  background-color: rgba(255, 255, 255, 0.634);
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  border-radius: 5%;
}

.information-text {
  color: rgba(55, 54, 54, 0.841);
}

.view_button {
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
}

.button_image {
  height: 25px;
  width: 25px;
  margin-left: 5px;
}

.button_image_view {
  height: 100%;
  text-align: center;
  justify-content: center;
}

.button_text_view {
  font-size: medium;
  color: rgba(229, 226, 222, 0.855);
}

.button0 {
  width: 180rpx;
  height: 40px;
  margin-top: 30px;
  margin-right: 0;
  border-radius: 10px;
  background-color: rgb(20, 108, 239);
}

.section {
  display: flex;
  flex-direction: row;
  font-size: medium;
  margin-left: 80rpx;
  z-index: 999;
  height: 40rpx;
  margin-top: 10rpx;
}

.section__title {
  margin-right: 10px;
}

.student_card {
  border-style: solid;
  border-width: 1px;
  border-color: rgba(48, 47, 47, 0.7);
  border-radius: 10px;
   margin: auto;
/*   margin-top: 30px; */
}

.student_card_bc1 {
  display: flex;
  flex-direction: row;
  height: 40px;
  width: 100%;
  background-color: #6495ed;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  margin: 0;
}

.student_card_bc2 {
  display: flex;
  flex-direction: row;
  height: 40px;
  width: 100%;
  background-color: #6495ed;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  margin: 0;
}

.background_image {
  width: 660rpx;
  height: 190px;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  opacity: 0.3;
}

.information_view {
  width: 660rpx;
  margin: 0 10px;
}

.bg_image {
  height: 32px;
  width: 30px;
}

.bc1 {
  display: flex;
  flex-direction: row;
  flex: 1;
  margin-left: 10px;
  margin-top: 3px;
  text-align: left;
  color: #ffebcd;
}

.bc2 {
  flex: 1;
  text-align: right;
  justify-content: center;
  margin-top: 10px;
  margin-right: 10px;
  font-size: medium;
  color: #ffebcd;
}

.btn-area {
  margin-top: 30px;
  display: flex;
  flex-direction: row;
}

.btn1 {
  margin: 20px;
  flex: 1;
  color: red;
  border-style: solid;
  border-width: 0.5px;
  border-color: rgba(48, 47, 47, 0.7);
}

.btn2 {
  flex: 1;
  color: rgb(0, 60, 255);
  margin: 20px;
  border-style: solid;
  border-width: 0.5px;
  border-color: rgba(48, 47, 47, 0.7);
}
